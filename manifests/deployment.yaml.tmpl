apiVersion: apps/v1
kind: Deployment
metadata:
  name: backend-deployment
  labels:
    app: backend
  namespace: dashboard
spec:
  replicas: 1
  selector:
    matchLabels:
      app: backend
  template:
    metadata:
      labels:
        app: backend
    spec:
      serviceAccountName: backend-service-account
      containers:
      - name: backend
        image: ${_IMAGE}
        ports:
        - containerPort: 3001

        resources:
          limits:
            memory: "1Gi"
            cpu: "600m"
        env:
          name: BASE_BACKEND_URL
          value: https://api.pypsa-earth-dashboard.com
        envFrom:
        - secretRef:
            name: backend
